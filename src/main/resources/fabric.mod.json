{
  "schemaVersion": 1,
  "id": "eclipsescustomname",
  "version": "${version}",
  "name": "Custom Name",
  "description": "Adds a /name command to customise the appearance of your name, and a /itemname command to give your items colourful names",
  "authors": [
    {
      "name": "eclipseisoffline",
      "contact": {
        "homepage": "https://github.com/eclipseisoffline"
      }
    }
  ],
  "contact": {
    "website": "https://modrinth.com/mod/fabric-custom-names",
    "issues": "https://github.com/eclipseisoffline/customname/issues",
    "sources": "https://github.com/eclipseisoffline/customname"
  },
  "license": "GPLv3",
  "icon": "assets/eclipsescustomname/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "xyz.eclipseisoffline.eclipsescustomname.CustomName"
    ]
  },
  "mixins": [
    "eclipsescustomname.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric": "*",
    "minecraft": "${supported_versions}",
    "fabric-permissions-api-v0": "*"
  },
  "suggests": {
    "luckperms": "*"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.donate": "https://ko-fi.com/eclipseisoffline",
        "modmenu.kofi": "https://ko-fi.com/eclipseisoffline",
        "modmenu.modrinth": "https://modrinth.com/mod/fabric-custom-names"
      }
    }
  }
}
